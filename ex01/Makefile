CC = c++ -Wall -Wextra -Werror -std=c++98 -g -o cast 
SRC =  main.cpp 

NAME = cast

all: $(NAME)

$(NAME): $(SRC)
	$(CC) $(SRC)

clean:
	rm -f $(NAME)

fclean: clean	
	rm -f $(NAME) 

re : fclean all
		@rm -r *.dSYM